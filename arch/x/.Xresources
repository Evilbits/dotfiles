! Font
! Use fallback font for missing powerline glyphs
!URxvt.font: xft:Inconsolata\ for\ Powerline:pixelsize=15:antialias=true,xft:Noto\ Color\ Emoji
URxvt.font: xft:Inconsolata\ for\ Powerline:pixelsize=15:antialias=true,xft:DejaVu\ Sans\ Mono\ for\ Powerline-10,xft:Noto\ Mono\ for\ Powerline
URxvt.letterSpace: 1

! Disable scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false

! Make sure locale is set
URxvt.imLocale: da_DK.utf8

! Rebind urxvt ISO 14755 keybind
URxvt.iso14755: false
URxvt.iso14755_52: false

! Styling
URxvt.highlightSelection: true
!URxvt.transparent: true
URxvt.blurRadius: 6
URxvt.shading: 30

! internal padding
URxvt.internalBorder: 5

! Keybindings
! Allow copy/paste using CTRL-SHIFT-C/V
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped

! Allow moving per word using CTRL-Left/Right
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! Better scrolling
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

! Maximum lines
URxvt.saveLines: 10000
! Quicker up/down scroll
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Cursor size
Xcursor.size: 16

! ROFI setup
!rofi.theme: Adapta-Nokto
rofi.theme: gruvbox-dark-soft
rofi.modi:  drun
