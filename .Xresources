! Font
! Use fallback font for missing powerline glyphs
URxvt.font: xft:Inconsolata\ for\ Powerline:pixelsize=15:antialias=true,xft:DejaVu\ Sans\ Mono\ for\ Powerline-10
!URxvt.font: xft:Termsynu:pixelsize=11
URxvt.letterSpace: 1

! Disable scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false

! Make sure locale is set
URxvt.imLocale: da_DK.utf8

! Rebind urxvt ISO 14755 keybind
URxvt.iso14755: false
URxvt.iso14755_52: false

! Keybindings
! Allow pasting
Urxvt.keysym.Shift-Control-V: eval:paste_clipboard
Urxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Styling
URxvt.highlightSelection: true
URxvt.transparent: true
URxvt.blurRadius: 6
URxvt.shading: 30

! internal padding
URxvt.internalBorder: 10
